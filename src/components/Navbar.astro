---
// Navbar.astro
---
<nav class="fixed top-0 w-full bg-white shadow-md z-10" aria-label="Navegación principal">
	<div class="max-w-7xl mx-auto flex items-center justify-between p-4">
	  <!-- Logo / Brand Name -->
	  <a href="#" class="text-2xl font-bold text-teal-600">FisioZen</a>
	  <!-- Navigation Links (hidden on mobile, shown on md-up) -->
	  <ul id="nav-links" class="hidden md:flex space-x-6 text-gray-700">
		<li><a href="#servicios" class="hover:text-teal-600">Servicios</a></li>
		<li><a href="#nosotros" class="hover:text-teal-600">Nosotros</a></li>
		<li><a href="#contacto" class="hover:text-teal-600">Contacto</a></li>
	  </ul>
	  <!-- Mobile menu button -->
	  <button class="md:hidden text-gray-700 focus:outline-none" aria-label="Abrir menú" aria-expanded="false"
		onclick="
		  const nav = document.getElementById('nav-links');
		  const expanded = this.getAttribute('aria-expanded') === 'true' || false;
		  nav.classList.toggle('hidden');
		  this.setAttribute('aria-expanded', !expanded);
		">
		☰
	  </button>
	</div>
  </nav>
  